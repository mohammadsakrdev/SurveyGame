                android:id="@+id/answerFair4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/poor_text"
                android:background="@color/answerBackground"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:id="@+id/answerPoor4"/>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Drag Answers here"
        android:layout_margin="3dp"
        android:padding="3dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/question1_txt"
            android:layout_weight="1"
            android:background="@color/answerBackground"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:id="@+id/answerQ1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/question2_txt"
            android:layout_weight="1"
            android:background="@color/answerBackground"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:id="@+id/answerQ2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/question3_txt"
            android:layout_weight="1"
            android:background="@color/answerBackground"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:id="@+id/answerQ3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/question4_txt"
            android:layout_weight="1"
            android:background="@color/answerBackground"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:id="@+id/answerQ4"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/barButtonText"
        android:id="@+id/barButton"/>

</LinearLayout>
